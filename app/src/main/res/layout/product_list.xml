<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="horizontal"
    android:background="#fafafa"
    android:weightSum="3"
    android:id="@+id/product"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/recommendedListLayout"
        android:layout_margin="5dp"
        android:elevation="12dp"
        android:innerRadius="0dp"

        android:shape="rectangle"

        android:thicknessRatio="1.9"
        android:layout_gravity="center"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/circularView"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:elevation="12dp"
                android:layout_weight="2"
                android:innerRadius="0dp"
                android:shape="rectangle"
                android:thicknessRatio="1.0"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp">

                <ImageView
                    android:id="@+id/img_prod"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    />



            </androidx.cardview.widget.CardView>


            <LinearLayout

                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:layout_marginVertical="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/productname"
                        android:textColor="#214357"
                        android:textSize="12dp"
                        android:text="Demo 2"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>

                    <TextView
                        android:id="@+id/descrip"
                        android:textColor="#214357"
                        android:textSize="12dp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:text="Indian, Burgers, Pizza, Â£1 Snacks."
                        android:fontFamily="@font/poppins_regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    </TextView>


                </LinearLayout>
                <LinearLayout
                    android:weightSum="2"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_baseline_star_24"
                            android:layout_width="15dp"
                            android:layout_height="15dp">
                        </ImageView>

                        <TextView
                            android:id="@+id/rating"
                            android:textColor="#384656"
                            android:textSize="12dp"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:text="4.9 Good (7+)"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        android:gravity="end"
                        android:visibility="gone"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:gravity="end"
                            android:layout_gravity="center"

                            android:layout_width="15dp"
                            android:layout_height="15dp">
                        </ImageView>

                        <Space
                            android:layout_width="5dp"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:id="@+id/cookingTime"
                            android:textColor="#A0A0A0"
                            android:textSize="12dp"
                            android:text="20-30 Mins"
                            android:singleLine="true"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:layout_marginTop="2dp"
                            android:layout_gravity="center"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                        </TextView>


                    </LinearLayout>


                </LinearLayout>







            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>

